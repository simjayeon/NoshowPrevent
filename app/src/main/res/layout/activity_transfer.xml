<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5FFFFFF"
    android:orientation="vertical"
    android:weightSum="13"
    android:padding="10sp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약 양도 받기"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_gravity ="center"/>

    </FrameLayout>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="* 양도 받을 사람의 정보를 정확히 입력해주세요."
        android:textColor="#2B2B2B"
        android:layout_marginBottom="10sp"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="이름"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/txtedit"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:layout_marginBottom="10sp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="전화번호"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/edtTel"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/txtedit"
        android:ems="10"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:layout_marginBottom="20sp"
        android:hint="- 함께 입력"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#0087ff"
        android:layout_below="@id/txtTitle"
        android:layout_marginBottom="20sp"/>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="# 양도 받는 정보"
        android:textColor="#2B2B2B"
        android:layout_marginBottom="10sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:text="예약 장소 : "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtPlace"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:text="예약 날짜 : "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:text="예약 시간 : "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:text="예약금 : "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtDiposit"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="#000000" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="20sp"
        android:textColor="#ffffff"
        android:id="@+id/btnTransfer"
        android:layout_width="200sp"
        android:layout_height="40sp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="@drawable/button"
        android:textSize="15sp"
        android:text="양도 받기" />

</LinearLayout>

