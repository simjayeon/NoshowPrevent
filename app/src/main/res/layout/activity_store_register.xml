<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FFFFFF"
    android:orientation="vertical"
    android:weightSum="13"
    android:padding="10sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가게 등록"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:layout_gravity ="center"/>
            </FrameLayout>




            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="사업자 이름"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/edtbName"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/txtedit"
                android:ems="10"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="사업장 이름"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edtsName"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/txtedit"
                android:ems="10"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:layout_marginBottom="5sp"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="사업자 번호"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/edtsId"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/txtedit"
                android:ems="10"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="전화번호"
                android:textColor="#000000"/>


                <EditText
                    android:hint="- 와 함께 입력"
                    android:id="@+id/edtTel"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/txtedit"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="5sp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="사업장 주소"
                android:textColor="#000000"/>


            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/txtedit"
                android:ems="10"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="소개 글"
                android:textColor="#000000"/>


            <EditText
                android:id="@+id/edtIntro"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/txtedit"
                android:ems="10"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="5sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20sp"
                    android:id="@+id/sex">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="외식"
                        android:id="@+id/rFood"
                        android:textColor="#000000"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="미용"
                        android:id="@+id/rBeauty"
                        android:textColor="#000000"/>

                </RadioGroup>



            </LinearLayout>

            <TextView
                android:id="@+id/btnRegister"
                android:layout_width="200sp"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@drawable/button"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:text="CONFIRM" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

