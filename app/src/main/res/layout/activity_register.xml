<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FFFFFF"
    android:orientation="vertical"
    android:weightSum="13"
    android:padding="10sp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_gravity ="center"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_gravity="right"
            android:padding="10dp"
            app:srcCompat="@drawable/logo"
            android:layout_marginBottom="10sp"/>
    </FrameLayout>


    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="이름"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/txtedit"
        android:ems="10"
        android:hint="심청이"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="5sp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="이메일"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/txtedit"
        android:ems="10"
        android:hint="user@example.com"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:layout_marginBottom="5sp"/>
    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="비밀번호"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/txtedit"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="5sp"/>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="비밀번호 확인"
        android:textColor="#000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtPwcheck"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/txtedit"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="5sp"/>

        <ImageView
            android:id="@+id/checkimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:layout_marginLeft="20sp"
            android:id="@+id/sex">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여자"
                android:id="@+id/female"
                android:textColor="#000000"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남자"
                android:id="@+id/male"
                android:textColor="#000000"/>

        </RadioGroup>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보 제공 동의 (필수)"
            android:id="@+id/chbox1"
            android:layout_gravity="left"
            android:layout_marginLeft="20sp"
            android:textColor="#000000"/>


        <CheckBox
            android:id="@+id/chbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="10sp"
            android:text="메세지 수신 및 알림 동의 (선택)"
            android:textColor="#000000"/>
    </LinearLayout>

    <TextView
        android:id="@+id/btnRegister"
        android:layout_width="200sp"
        android:layout_height="40sp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="@drawable/button"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="CONFIRM" />

</LinearLayout>

